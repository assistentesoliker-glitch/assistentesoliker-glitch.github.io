          }
      </style>
  </head>
  <body>
      <div class="container">
          <h1>üéâ SISTEMA DE ANOTA√á√ïES COMPLETO</h1>

          <div class="success">
              <h2>‚úÖ PRONTO PARA SALVAR NO GITHUB!</h2>
              <p>Agora voc√™ pode salvar anota√ß√µes diretamente no reposit√≥rio.</p>
          </div>

          <div class="anotacao-box">
              <h2>üìù Anota√ß√£o do Dia</h2>
              <p><strong>Data:</strong> 16/12/2025</p>

              <textarea id="anotacao" placeholder="Digite aqui suas observa√ß√µes do dia...">
  </textarea>

              <br>
              <button class="btn-salvar" onclick="salvarAnotacao()">
                  üíæ Salvar Anota√ß√£o
              </button>

              <button class="btn-testar" onclick="testarSalvamento()">
                  üß™ Testar Salvamento
              </button>

              <div id="status" class="status"></div>
          </div>

          <div class="debug">
              <h3>üîç Informa√ß√µes T√©cnicas:</h3>
              <p><strong>SHA do arquivo:</strong> <code id="sha-code">_input.first().json.sha</code></p>
              <p><strong>Anota√ß√µes carregadas:</strong> 0 entrada(s)</p>
              <p><strong>JSON para salvar (exemplo):</strong></p>
              <pre id="json-preview">{
  "2025-12-16": "EXEMPLO: Anota√ß√£o teste do n8n 16/12/2025"
}</pre>
          </div>
      </div>

      <script>
          const sha = "_input.first().json.sha";
          const conteudoBase64 = "ewogICIyMDI1LTEyLTE2IjogIkVYRU1QTE86IEFub3Rhw6fDo28gdGVzdGUgZG8gbjhuIDE2LzEyLzIwMjUiCn0=";

          function mostrarStatus(mensagem, tipo) {
              const statusDiv = document.getElementById('status');
              statusDiv.textContent = mensagem;
              statusDiv.className = 'status ' + tipo;
              statusDiv.style.display = 'block';

              if (tipo === 'success') {
                  setTimeout(() => {
                      statusDiv.style.display = 'none';
                  }, 3000);
              }
          }

          function testarSalvamento() {
              mostrarStatus('üß™ Preparando para salvar no GitHub...', '');

              // Simular salvamento
              setTimeout(() => {
                  mostrarStatus('‚úÖ Teste realizado! O sistema est√° pronto para salvar.', 'success');
              }, 1000);
          }

          function salvarAnotacao() {
              const texto = document.getElementById('anotacao').value.trim();

              if (!texto) {
                  mostrarStatus('‚ö†Ô∏è Digite uma anota√ß√£o antes de salvar.', 'error');
                  return;
              }

              mostrarStatus('‚è≥ Salvando no GitHub...', '');

              // Aqui voc√™ conectaria com um webhook do n8n
              // Por enquanto, s√≥ mostra mensagem
              setTimeout(() => {
                  mostrarStatus('‚úÖ Anota√ß√£o salva com sucesso! (Funcionalidade completa em breve)', 'success');

                  // Atualizar preview
                  const hojeISO = new Date().toISOString().split('T')[0];
                  const preview = document.getElementById('json-preview');
                  try {
                      const dados = JSON.parse(preview.textContent);
                      dados[hojeISO] = texto;
                      preview.textContent = JSON.stringify(dados, null, 2);
                  } catch (e) {
                      console.error(e);
                  }
              }, 1500);
          }

          console.log('Sistema carregado! SHA:', sha);
      </script>
  </body>
  </html>
  